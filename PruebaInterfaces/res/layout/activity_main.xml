<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnDialogos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="@string/dialogos" />

    <Button
        android:id="@+id/btnEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnProgreso"
        android:layout_alignRight="@+id/btnProgreso"
        android:layout_below="@+id/btnProgreso"
        android:layout_marginTop="22dp"
        android:text="@string/edittext" />

    <Button
        android:id="@+id/btnTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEdittext"
        android:layout_alignRight="@+id/btnDialogos"
        android:layout_below="@+id/btnEdittext"
        android:layout_marginTop="25dp"
        android:text="@string/tabs" />

    <Button
        android:id="@+id/btnProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnDialogos"
        android:layout_alignRight="@+id/btnDialogos"
        android:layout_below="@+id/btnDialogos"
        android:layout_marginTop="30dp"
        android:text="@string/progress" />

</RelativeLayout>